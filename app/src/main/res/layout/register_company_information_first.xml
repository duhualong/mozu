<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_light"
              android:id="@id/root_view"
              android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="?android:actionBarSize"
                    android:background="@color/colorPrimary">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:text="@string/tv_information_perfect"
                  android:textColor="@color/white"
                  android:textSize="@dimen/text_title_size"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:padding="@dimen/img_back_padding"
                   android:id="@id/img_back"
                   android:src="@mipmap/ic_back"/>


    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:layout_marginBottom="10dp"
                  android:layout_marginEnd="@dimen/font_size_18sp"
                  android:layout_marginLeft="@dimen/font_size_18sp"
                  android:layout_marginRight="@dimen/font_size_18sp"
                  android:layout_marginStart="@dimen/font_size_18sp"
                  android:layout_marginTop="36dp"
                  android:background="@mipmap/bg_edit_text_light">
        <EditText
            android:id="@id/edit_company_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="start|left"
            android:hint="@string/hint_company_address"
            android:lines="5"
            android:textColor="@color/titleColor"
            android:textColorHint="@color/gray"
            android:textSize="12sp"
        />

    </LinearLayout>
    <Button android:id="@id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_btn_nor"
            android:layout_margin="@dimen/font_size_18sp"
            android:background="@mipmap/bg_submit_button"
            android:text="@string/btn_next"
            android:textSize="@dimen/text_normal_size"/>

</LinearLayout>