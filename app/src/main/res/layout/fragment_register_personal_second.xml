<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@id/root_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f1f1f1"
              android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="?android:actionBarSize"
                    android:background="@color/colorPrimary">
        <ImageView
            android:id="@id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@mipmap/ic_back"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:text="@string/tv_information_title"
                  android:textColor="@color/white"
                  android:textSize="@dimen/text_title_size"
        />

    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"

                  android:layout_marginTop="20dp"
                  android:background="@color/white"
                  android:orientation="vertical"

    >
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@id/rl_height"
                        android:padding="8dp">
            <ImageView
                android:id="@id/img"
                android:layout_width="@dimen/register_size_img"
                android:layout_height="@dimen/register_size_img"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_registerl_height"
            />
            <TextView
                android:id="@id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/text_img_padding"
                android:layout_marginStart="@dimen/text_img_padding"
                android:layout_toEndOf="@id/img"
                android:layout_toRightOf="@id/img"
                android:text="@string/tv_height"
                android:textColor="@color/titleColor"
                android:textSize="@dimen/text_large_size"/>
            <TextView
                android:id="@id/tv_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:drawableEnd="@mipmap/ic_arrow_right"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/ic_arrow_right"
                android:gravity="end|center_vertical"
                android:lines="1"
                android:text="@string/tv_empty"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_large_size"/>

            <TextView android:id="@id/view_height"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_marginEnd="@dimen/padding_img"
                      android:layout_marginRight="@dimen/padding_img"
                      android:layout_toLeftOf="@id/tv_height"
                      android:layout_toStartOf="@id/tv_height"
                      android:gravity="center"
                      android:text="*"
                      android:textColor="#f00"
                      android:textSize="18sp"
                      android:visibility="invisible"/>
        </RelativeLayout>
        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/gray_light"/>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@id/rl_qualifications"
                        android:padding="8dp">
            <ImageView
                android:id="@id/img"
                android:layout_width="@dimen/register_size_img"
                android:layout_height="@dimen/register_size_img"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_register_education"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignBottom="@+id/tv_qualifications"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="@dimen/text_img_padding"
                      android:layout_marginStart="@dimen/text_img_padding"
                      android:layout_toEndOf="@id/img"
                      android:layout_toRightOf="@id/img"
                      android:text="@string/tv_qualifications"
                      android:textColor="@color/titleColor"
                      android:textSize="@dimen/text_large_size"/>
            <TextView
                android:id="@id/tv_qualifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:drawableEnd="@mipmap/ic_arrow_right"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/ic_arrow_right"

                android:gravity="center"
                android:text="@string/tv_empty"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_large_size"/>
            <TextView android:id="@id/view_qualifications"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_marginEnd="@dimen/padding_img"
                      android:layout_marginRight="@dimen/padding_img"
                      android:layout_toLeftOf="@id/tv_qualifications"
                      android:layout_toStartOf="@id/tv_qualifications"
                      android:gravity="center"
                      android:text="*"
                      android:visibility="invisible"
                      android:textColor="#f00"
                      android:textSize="18sp"/>

        </RelativeLayout>
        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/gray_light"/>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@id/rl_marry_state"
                        android:padding="8dp">
            <ImageView
                android:id="@id/img"
                android:layout_width="@dimen/register_size_img"
                android:layout_height="@dimen/register_size_img"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_hunyin"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="@dimen/text_img_padding"
                      android:layout_marginStart="@dimen/text_img_padding"
                      android:layout_toEndOf="@id/img"
                      android:layout_toRightOf="@id/img"
                      android:text="@string/tv_marry_state"
                      android:textColor="@color/titleColor"
                      android:textSize="@dimen/text_large_size"/>
            <TextView
                android:id="@id/tv_marry_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:drawableEnd="@mipmap/ic_arrow_right"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/ic_arrow_right"
                android:gravity="center"
                android:text="@string/tv_empty"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_large_size"/>
            <TextView android:id="@id/view_marry"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_marginEnd="@dimen/padding_img"
                      android:layout_marginRight="@dimen/padding_img"
                      android:layout_toLeftOf="@id/tv_marry_state"
                      android:layout_toStartOf="@id/tv_marry_state"
                      android:gravity="center"
                      android:text="*"
                      android:visibility="invisible"
                      android:textColor="#f00"
                      android:textSize="18sp"/>

        </RelativeLayout>
        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/gray_light"/>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@id/rl_now_address"
                        android:padding="8dp">
            <ImageView
                android:id="@id/img"
                android:layout_width="@dimen/register_size_img"
                android:layout_height="@dimen/register_size_img"
