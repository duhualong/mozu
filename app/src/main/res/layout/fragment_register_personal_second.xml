            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="@dimen/text_img_padding"
                      android:layout_marginStart="@dimen/text_img_padding"
                      android:layout_toEndOf="@id/img"
                      android:layout_toRightOf="@id/img"
                      android:text="@string/tv_industry"
                      android:textColor="@color/titleColor"
                      android:textSize="@dimen/text_large_size"/>
            <TextView
                android:id="@id/tv_industry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:drawableEnd="@mipmap/ic_arrow_right"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/ic_arrow_right"
                android:gravity="center"
                android:text="@string/tv_empty"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_large_size"/>
            <TextView android:id="@id/view_industry"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_marginEnd="@dimen/padding_img"
                      android:layout_marginRight="@dimen/padding_img"
                      android:layout_toLeftOf="@id/tv_industry"
                      android:layout_toStartOf="@id/tv_industry"
                      android:gravity="center"
                      android:text="*"
                      android:visibility="invisible"
                      android:textColor="#f00"
                      android:textSize="18sp"/>

        </RelativeLayout>
        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/gray_light"/>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@id/rl_skill"
                        android:padding="8dp">
            <ImageView
                android:id="@id/img"
                android:layout_width="@dimen/register_size_img"
                android:layout_height="@dimen/register_size_img"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_skill"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="@dimen/text_img_padding"
                      android:layout_marginStart="@dimen/text_img_padding"
                      android:layout_toEndOf="@id/img"
                      android:layout_toRightOf="@id/img"
                      android:text="@string/tv_skill"
                      android:textColor="@color/titleColor"
                      android:textSize="@dimen/text_large_size"/>
            <TextView
                android:id="@id/tv_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:drawableEnd="@mipmap/ic_arrow_right"
