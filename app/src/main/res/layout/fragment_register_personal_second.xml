            />
            <TextView
                android:id="@id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/text_img_padding"
                android:layout_marginStart="@dimen/text_img_padding"
                android:layout_toEndOf="@id/img"
                android:layout_toRightOf="@id/img"
                android:text="@string/address_now"
                android:textColor="@color/titleColor"
                android:textSize="@dimen/text_large_size"/>
            <TextView
                android:id="@id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:drawableEnd="@mipmap/ic_arrow_right"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/ic_arrow_right"
                android:gravity="end|center_vertical"
                android:lines="1"
                android:text="@string/tv_empty"
                android:maxLength="10"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_large_size"/>
            <TextView android:id="@id/view_address"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_marginEnd="@dimen/padding_img"
                      android:layout_marginRight="@dimen/padding_img"
                      android:layout_toLeftOf="@id/tv_address"
                      android:layout_toStartOf="@id/tv_address"
                      android:gravity="center"
                      android:text="*"
                      android:visibility="invisible"
                      android:textColor="#f00"
                      android:textSize="18sp"/>

        </RelativeLayout>
        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/gray_light"/>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@id/rl_contacts"
                        android:padding="8dp">
            <ImageView
                android:id="@id/img"
                android:layout_width="@dimen/register_size_img"
