<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f1f1f1"
              android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="?android:actionBarSize"
                    android:background="@color/colorPrimary">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:text="@string/linkman"
                  android:textColor="@color/white"
                  android:textSize="@dimen/text_title_size"/>
        <ImageView android:id="@id/img_back"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:padding="@dimen/padding_bottom"
                   android:src="@mipmap/ic_back"/>

    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@id/img_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/padding_long"
        android:layout_marginTop="@dimen/padding_longer"
        android:background="@mipmap/ic_default_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/btn_send_msg"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="#7CB475"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_contact_action_msg"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_send_call"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="#F96465"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_contact_action_call"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_bottom"
                    android:background="@color/white"
                    android:padding="@dimen/padding_bottom">
        <TextView android:id="@id/view"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="姓        名"
                  android:textColor="@color/black_light"
                  android:textSize="@dimen/text_large_size"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toEndOf="@id/view"
                  android:layout_toRightOf="@id/view"
                  android:text="@string/linkman_name"
                  android:id="@id/linkman_name"
                  android:layout_marginLeft="@dimen/padding_short"
                  android:layout_marginStart="@dimen/padding_short"
                  android:textSize="@dimen/text_large_size"
                  android:textColor="@color/titleColor"/>


    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:padding="@dimen/padding_bottom">
        <TextView android:id="@id/view"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="职        务"
                  android:textColor="@color/black_light"
                  android:textSize="@dimen/text_large_size"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toEndOf="@id/view"
                  android:layout_toRightOf="@id/view"
                  android:text="经理"
                  android:id="@id/linkman_duty"
                  android:layout_marginLeft="@dimen/padding_short"
                  android:layout_marginStart="@dimen/padding_short"
                  android:textSize="@dimen/text_large_size"
                  android:textColor="@color/titleColor"/>


    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:padding="@dimen/padding_bottom">
        <TextView android:id="@id/view"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="手机号码"
                  android:textColor="@color/black_light"
                  android:textSize="@dimen/text_large_size"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toEndOf="@id/view"
                  android:layout_toRightOf="@id/view"
                  android:text="18817772080"
                  android:id="@id/linkman_phone"
                  android:layout_marginLeft="@dimen/padding_short"
                  android:layout_marginStart="@dimen/padding_short"
                  android:textSize="@dimen/text_large_size"
                  android:textColor="@color/titleColor"/>


    </RelativeLayout>
</LinearLayout>