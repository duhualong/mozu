<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_light"
              android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="?android:actionBarSize"
                    android:background="@color/colorPrimary">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:text="学习与培训"
                  android:textColor="@color/white"
                  android:textSize="@dimen/text_title_size"/>
        <ImageView android:id="@id/img_back"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:padding="@dimen/padding_bottom"
                   android:src="@mipmap/ic_back"/>

    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:id="@id/rl_training_key_personal"
                    android:layout_marginEnd="@dimen/padding_bottom"
                    android:layout_marginLeft="@dimen/padding_bottom"
                    android:layout_marginRight="@dimen/padding_bottom"
                    android:layout_marginStart="@dimen/padding_bottom"
                    android:background="@drawable/ic_white_shape_background">
        <TextView android:id="@+id/tv_key_personal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/padding_normal"
                  android:layout_marginLeft="@dimen/padding_normal"
                  android:layout_marginStart="@dimen/padding_normal"
                  android:layout_marginTop="@dimen/padding_bottom"
                  android:text="关键人物"
                  android:textColor="@color/black_light"
                  android:textSize="@dimen/text_large_size"/>
        <LinearLayout android:id="@+id/line_key_personal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/tv_key_personal"
                      android:orientation="horizontal">
            <RelativeLayout android:layout_width="0dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/padding_bottom"
                            android:layout_marginLeft="@dimen/padding_normal"
                            android:layout_marginRight="@dimen/padding_bottom"
                            android:layout_marginStart="@dimen/padding_normal"
                            android:layout_weight="5"
                            android:background="@drawable/ic_progress_bar_default">

                <ProgressBar
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:progress="0"
                    android:id="@id/progress_bar_key_personal"
                    android:progressDrawable="@drawable/progressbar_star_style"
                />
            </RelativeLayout>
            <TextView android:id="@id/tv_progress_key_number"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginEnd="@dimen/padding_normal"
                      android:layout_marginRight="@dimen/padding_normal"
                      android:layout_weight="1"
                      android:text="0%"
                      android:gravity="end"
                      android:textColor="#69CC90"
                      android:textSize="@dimen/text_large_size"/>

        </LinearLayout>
        <View android:id="@+id/view"
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_below="@+id/line_key_personal"
              android:layout_marginTop="@dimen/padding_normal"
              android:background="@color/white_light"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:layout_below="@+id/view"
                  android:layout_marginBottom="@dimen/padding_bottom"
                  android:layout_marginEnd="@dimen/padding_normal"
                  android:layout_marginLeft="@dimen/padding_normal"
                  android:layout_marginRight="@dimen/padding_normal"
                  android:layout_marginStart="@dimen/padding_normal"
                  android:layout_marginTop="5dp"
                  android:drawableEnd="@mipmap/ic_arrow_right"
                  android:drawableRight="@mipmap/ic_arrow_right"
                  android:gravity="center_vertical"
                  android:text="去学习"
                  android:textColor="@color/titleColor"
                  android:textSize="@dimen/text_normal_size"/>

    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:id="@id/rl_training_post"
                    android:layout_marginEnd="@dimen/padding_bottom"
                    android:layout_marginLeft="@dimen/padding_bottom"
                    android:layout_marginRight="@dimen/padding_bottom"
                    android:layout_marginStart="@dimen/padding_bottom"
                    android:background="@drawable/ic_white_shape_background">
        <TextView android:id="@+id/tv_post"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/padding_normal"
                  android:layout_marginLeft="@dimen/padding_normal"
                  android:layout_marginStart="@dimen/padding_normal"
                  android:layout_marginTop="@dimen/padding_bottom"
                  android:text="岗位培训"
                  android:textColor="@color/black_light"
                  android:textSize="@dimen/text_large_size"/>
        <LinearLayout android:id="@+id/line_post"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/tv_post"
                      android:orientation="horizontal">
            <RelativeLayout android:layout_width="0dp"
                            android:layout_height="10dp"

                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/padding_bottom"
                            android:layout_marginLeft="@dimen/padding_normal"
                            android:layout_marginRight="@dimen/padding_bottom"
                            android:layout_marginStart="@dimen/padding_normal"
                            android:layout_weight="5"
                            android:background="@drawable/ic_progress_bar_default">

                <ProgressBar
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:progress="0"
                    android:id="@id/progress_bar_post"
                    android:progressDrawable="@drawable/progressbar_star_style_red"
                />
            </RelativeLayout>
            <TextView android:id="@id/tv_progress_post"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginEnd="@dimen/padding_normal"
                      android:layout_marginRight="@dimen/padding_normal"
                      android:layout_weight="1"
                      android:text="0%"
                      android:gravity="end"
                      android:textColor="#F8A0AB"
                      android:textSize="@dimen/text_large_size"/>

        </LinearLayout>
        <View android:id="@+id/view1"
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_below="@+id/line_post"
              android:layout_marginTop="@dimen/padding_normal"
              android:background="@color/white_light"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:layout_below="@+id/view1"
                  android:layout_marginBottom="@dimen/padding_bottom"
                  android:layout_marginEnd="@dimen/padding_normal"
                  android:layout_marginLeft="@dimen/padding_normal"
                  android:layout_marginRight="@dimen/padding_normal"
                  android:layout_marginStart="@dimen/padding_normal"
                  android:layout_marginTop="5dp"
                  android:drawableEnd="@mipmap/ic_arrow_right"
                  android:drawableRight="@mipmap/ic_arrow_right"
                  android:gravity="center_vertical"
                  android:text="去学习"
                  android:textColor="@color/titleColor"
                  android:textSize="@dimen/text_normal_size"/>

    </RelativeLayout>

</LinearLayout>