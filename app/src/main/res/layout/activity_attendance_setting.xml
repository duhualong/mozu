<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_attendance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_light"
    android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="?android:actionBarSize"

                    android:background="@color/colorPrimary">
        <ImageView android:id="@id/img_back"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:padding="@dimen/padding_bottom"
                   android:src="@mipmap/ic_back"/>


    </RelativeLayout>
    <TextView
        android:id="@+id/tv_person_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="10dp"
        android:text="保安经理 | Eenie"
        android:textSize="16sp"/>
    <noman.weekcalendar.WeekCalendar
        android:id="@+id/weekCalendar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="1dp"
        app:dayNameLength="threeLetters"
        app:daysBackgroundColor="#fcfcfc"
        app:daysTextColor="#999"
        app:selectedBgColor="@color/calendar_selected_day_bg"
        app:todaysDateBgColor="@color/calendar_selected_day_bg"
        app:weekBackgroundColor="#ffffff"
        app:weekTextColor="#000"
        app:weekTextSize="10sp">
    </noman.weekcalendar.WeekCalendar>
</LinearLayout>