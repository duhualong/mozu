<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_light"
              android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="?android:actionBarSize"
                    android:background="@color/colorPrimary">
        <ImageView android:id="@id/img_back"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:padding="@dimen/padding_bottom"
                   android:src="@mipmap/ic_back"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:text="申请反馈"
                  android:textColor="@color/white"
                  android:textSize="@dimen/text_title_size"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/padding_bottom">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@id/img_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_default_header"/>
        <TextView android:id="@id/tv_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="@dimen/padding_bottom"
                  android:layout_marginStart="@dimen/padding_bottom"
                  android:layout_toEndOf="@id/img_avatar"
                  android:layout_toRightOf="@id/img_avatar"
                  android:text="无"
                  android:textColor="@color/black_light"
                  android:textSize="@dimen/text_large_size"/>
        <TextView android:id="@id/tv_date"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentEnd="true"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:text="无"
                  android:textColor="@color/black_light"
                  android:textSize="@dimen/text_large_size"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:padding="@dimen/padding_bottom">
        <TextView android:id="@+id/tv_meeting_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:text="会议名称"
                  android:textColor="@color/black_light"
                  android:textSize="@dimen/text_large_size"/>
        <TextView android:id="@id/meeting_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="@dimen/padding_bottom"
                  android:layout_marginStart="@dimen/padding_bottom"
                  android:layout_toEndOf="@+id/tv_meeting_name"
                  android:layout_toRightOf="@+id/tv_meeting_name"
                  android:text="无"
                  android:textColor="@color/titleColor"
                  android:textSize="@dimen/text_large_size"/>


    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/padding_bottom">
        <TextView android:id="@+id/tv_meeting_time"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:text="会议时间"
                  android:textColor="@color/black_light"
                  android:textSize="@dimen/text_large_size"/>
        <TextView android:id="@id/meeting_time"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="@dimen/padding_bottom"
                  android:layout_marginStart="@dimen/padding_bottom"
                  android:layout_toEndOf="@+id/tv_meeting_time"
                  android:layout_toRightOf="@+id/tv_meeting_time"
                  android:text="无"
                  android:layout_marginEnd="@dimen/padding_normal"
                  android:layout_marginRight="@dimen/padding_normal"
                  android:textColor="@color/titleColor"
                  android:textSize="@dimen/text_large_size"/>


    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/padding_bottom">
        <TextView android:id="@+id/tv_meeting_class"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:text="会&#8194;议&#8194;室"
                  android:textColor="@color/black_light"
                  android:textSize="@dimen/text_large_size"/>
        <TextView android:id="@id/meeting_class"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="@dimen/padding_bottom"
                  android:layout_marginStart="@dimen/padding_bottom"
                  android:layout_toEndOf="@+id/tv_meeting_class"
                  android:layout_toRightOf="@+id/tv_meeting_class"
                  android:text="无"
                  android:textColor="@color/titleColor"
                  android:textSize="@dimen/text_large_size"/>


    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/padding_bottom">
        <TextView android:id="@+id/tv_meeting_purpose"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:text="会议目的"
                  android:textColor="@color/black_light"
                  android:textSize="@dimen/text_large_size"/>
        <TextView android:id="@id/meeting_purpose"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="@dimen/padding_bottom"
                  android:layout_marginStart="@dimen/padding_bottom"
                  android:layout_toEndOf="@+id/tv_meeting_purpose"
                  android:layout_toRightOf="@+id/tv_meeting_purpose"
                  android:text="无"
                  android:textColor="@color/titleColor"
                  android:textSize="@dimen/text_large_size"/>


    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_bottom"
                    android:background="@color/white"
                    android:padding="@dimen/padding_bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="审核结果"
            android:textColor="@color/black_light"
            android:textSize="@dimen/text_large_size"/>
        <TextView android:id="@id/meeting_apply_result"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentEnd="true"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="@dimen/padding_bottom"
                  android:layout_marginStart="@dimen/padding_bottom"
                  android:text="无"
                  android:textColor="@color/titleColor"
                  android:textSize="@dimen/text_large_size"/>


    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_bottom"
                    android:background="@color/white"
                    android:id="@id/rl_apply_meeting"
                    android:padding="@dimen/padding_bottom">
        <ImageView
            android:id="@id/img_apply_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_default_header"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toEndOf="@id/img_apply_avatar"
                  android:layout_toRightOf="@id/img_apply_avatar"
                  android:textSize="@dimen/text_large_size"
                  android:text="无"
                  android:id="@id/tv_apply_meeting_name"
                  android:layout_marginTop="4dp"
                  android:layout_marginLeft="@dimen/padding_bottom"
                  android:layout_marginStart="@dimen/padding_bottom"
                  android:textColor="@color/black_light"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toEndOf="@id/img_apply_avatar"
                  android:layout_toRightOf="@id/img_apply_avatar"
                  android:textSize="@dimen/text_normal_size"
                  android:text="无"
                  android:id="@id/tv_apply_meeting_cause"
                  android:layout_below="@id/tv_apply_meeting_name"
                  android:layout_marginTop="2dp"
                  android:layout_marginLeft="@dimen/padding_bottom"
                  android:layout_marginStart="@dimen/padding_bottom"
                  android:textColor="@color/titleColor"/>
        <TextView android:id="@id/tv_apply_result"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentEnd="true"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="@dimen/padding_bottom"
                  android:layout_marginStart="@dimen/padding_bottom"
                  android:text="无"
                  android:textColor="@color/titleColor"
                  android:textSize="@dimen/text_large_size"/>


    </RelativeLayout>
</LinearLayout>