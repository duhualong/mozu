<?xml version="1.0" encoding="utf-8"?>
<org.eenie.wgj.data.local.SquareViewGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <RelativeLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_module_bg"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_action"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:src="@mipmap/ic_home_module_add"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_vip_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1.5dp"
            android:src="@mipmap/ic_home_module_vip_flag"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_module_ic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_home_module_event_info"/>

            <TextView
                android:id="@+id/tv_module_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="巡检"
                android:textColor="@color/black_light"
                android:textSize="@dimen/text_small_size"/>
        </LinearLayout>
    </RelativeLayout>
</org.eenie.wgj.data.local.SquareViewGroup>
