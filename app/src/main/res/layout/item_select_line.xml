<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:id="@id/rl_select_line"
                android:padding="@dimen/padding_bottom">
    <TextView android:id="@id/item_number"
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:background="@drawable/circle_blue"
              android:gravity="center"
              android:text="1"
              android:textColor="@color/white"
              android:layout_centerVertical="true"
              android:textSize="@dimen/text_large_size"/>
    <TextView android:id="@id/item_line"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/padding_bottom"
              android:layout_marginStart="@dimen/padding_bottom"
              android:layout_toEndOf="@id/item_number"
              android:layout_toRightOf="@id/item_number"
              android:gravity="center_vertical"
              android:text="测试"
              android:layout_centerVertical="true"
              android:textColor="@color/titleColor"
              android:textSize="@dimen/text_large_size"/>
</RelativeLayout>