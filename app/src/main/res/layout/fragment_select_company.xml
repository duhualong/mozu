<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f1f1f1"
              android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="?android:actionBarSize"
                    android:background="@color/colorPrimary">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:text="@string/select_company"
                  android:textColor="@color/white"
                  android:textSize="@dimen/text_title_size"/>
        <ImageView android:id="@id/img_back"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:padding="@dimen/padding_bottom"
                   android:src="@mipmap/ic_back"/>


    </RelativeLayout>

    <ImageView android:id="@id/img_join_company"
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="60dp"
               android:background="@mipmap/ic_join_company"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/titleColor"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="@dimen/padding_short"
              android:text="加入公司"/>
    <ImageView android:id="@id/img_create_company"
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="60dp"
               android:background="@mipmap/ic__create_company"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/titleColor"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="@dimen/padding_short"
              android:text="创建公司"/>

</LinearLayout>