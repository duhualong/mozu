<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="5dp"
    android:padding="@dimen/padding_short"
>


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/tv_report_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="2017年07月完成率"
            android:textColor="@color/black_light"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_report_title"
            android:orientation="horizontal"
        >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <org.eenie.wgj.ui.reportpoststatistics.CircularProgressBar
                        android:id="@+id/pro_rate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25.66%"
                            android:textColor="@color/text_red"
                            android:textSize="@dimen/text_title_size"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="完成率"
                            android:textColor="@color/titleColor"
                            android:textSize="@dimen/text_normal_size"/>
                    </LinearLayout>
                </FrameLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/item_report_should_btn_bg_normal"
                        android:gravity="center"
                        android:lines="1"
                        android:minWidth="90dp"
                        android:paddingBottom="7dp"
                        android:paddingTop="7dp"
                        android:text="应报岗"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_normal_size"/>
                    <TextView
                        android:id="@+id/tv_report_should"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lines="1"
                        android:padding="10dp"
                        android:text="200次"
                        android:textColor="@color/text_blue"
                        android:textSize="@dimen/text_normal_size"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@id/line_actual_post"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">
                    <TextView

                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/item_report_fact_btn_bg_normal"
                        android:gravity="center"
                        android:lines="1"
                        android:minWidth="90dp"
                        android:paddingBottom="7dp"
                        android:paddingTop="7dp"
                        android:text="实际报岗"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_normal_size"/>
                    <TextView
                        android:id="@+id/tv_report_fact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lines="1"
                        android:padding="10dp"
                        android:text="200次"
                        android:textColor="@color/text_blue"
                        android:textSize="12sp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:id="@id/line_not_report_post">
                    <TextView
                        android:id="@+id/btn_report_fact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/item_report_none_btn_bg_normal"
                        android:gravity="center"
                        android:lines="1"
                        android:minWidth="90dp"
                        android:paddingBottom="7dp"
                        android:paddingTop="7dp"
                        android:text="未报岗"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_report_none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lines="1"
                        android:padding="10dp"
                        android:text="200次"
                        android:textColor="#a0ff0000"
                        android:textSize="@dimen/text_normal_size"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>