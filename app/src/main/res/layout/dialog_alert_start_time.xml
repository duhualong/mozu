<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">
    <TextView android:layout_width="match_parent"
              android:layout_height="?android:actionBarSize"
              android:background="@color/colorPrimary"
              android:gravity="center"
              android:text="@string/tv_sign_start_time"
              android:textAppearance="@style/TextAppearance.AppCompat.Title"
              android:textColor="@color/white"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  android:orientation="horizontal">
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="end"
                      android:orientation="vertical">
            <Button android:id="@id/btn_add_hour"
                    android:layout_width="75dp"
                    android:layout_height="45dp"
                    android:background="@mipmap/click_but_add"/>
            <EditText android:id="@id/et_hour"
                      android:layout_width="75dp"
                      android:layout_height="45dp"
                      android:layout_marginBottom="10dp"
                      android:layout_marginTop="10dp"
                      android:background="@mipmap/ic_edit_time"
                      android:gravity="center"
                      android:text="00"
                      android:maxLength="2"
                      android:inputType="number"
                      android:textColor="@color/black"
                      android:textColorHint="@color/titleColor"/>
            <Button android:id="@id/btn_subtract_hour"
                    android:layout_width="75dp"
                    android:layout_height="45dp"
                    android:background="@mipmap/click_but_subtract"/>

        </LinearLayout>
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="20dp"
                      android:layout_marginStart="20dp"
                      android:layout_weight="1"
                      android:orientation="vertical">
            <Button android:id="@id/btn_add_minute"
                    android:layout_width="75dp"
                    android:layout_height="45dp"
                    android:background="@mipmap/click_but_add"/>
            <EditText android:id="@id/edit_minute"
                      android:layout_width="75dp"
                      android:layout_height="45dp"
                      android:layout_marginBottom="10dp"
                      android:layout_marginTop="10dp"
                      android:background="@mipmap/ic_edit_time"
                      android:gravity="center"
                      android:text="00"
                      android:maxLength="2"
                      android:inputType="number"
                      android:textColor="@color/black"
                      android:textColorHint="@color/titleColor"/>
            <Button android:id="@id/btn_subtract_minute"
                    android:layout_width="75dp"
                    android:layout_height="45dp"
                    android:background="@mipmap/click_but_subtract"/>
        </LinearLayout>
    </LinearLayout>
    <Button android:id="@id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_height_larger_distance"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/bg_submit_button"

            android:text="@string/btn_ok"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
</LinearLayout>