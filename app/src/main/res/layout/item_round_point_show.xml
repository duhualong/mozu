<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/padding_bottom"
                android:id="@id/rl_select_point"
                android:layout_marginBottom="1dp"
>
    <CheckBox
        android:id="@id/checkbox_password_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/padding_bottom"
        android:layout_marginRight="@dimen/padding_bottom"
        android:button="@drawable/checkbox_apply_show_state"
    />
    <TextView android:id="@id/tv_post"
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:layout_centerVertical="true"
              android:layout_marginLeft="@dimen/padding_short"
              android:layout_marginStart="@dimen/padding_short"
              android:layout_toEndOf="@id/checkbox_password_remember"
              android:layout_toRightOf="@id/checkbox_password_remember"
              android:background="@drawable/circle_blue"
              android:gravity="center"
              android:text="01"
              android:textColor="@color/white"
              android:textSize="@dimen/text_large_size"/>
    <TextView android:id="@id/item_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_marginLeft="@dimen/padding_short"
              android:layout_marginStart="@dimen/padding_short"
              android:layout_toEndOf="@id/tv_post"
              android:layout_toRightOf="@id/tv_post"
              android:text="大堂"
              android:textColor="@color/titleColor"
              android:textSize="@dimen/text_large_size"/>
    <TextView android:id="@id/btn_time"
            android:layout_width="72dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/white_light"
            android:text="20:50"
              android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/text_large_size"/>


</RelativeLayout>