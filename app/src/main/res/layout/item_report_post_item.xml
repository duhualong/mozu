<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="98dp"
              android:background="@color/white"
              android:orientation="vertical"
>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="90dp"
                  android:orientation="horizontal">
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_gravity="center_vertical"
                      android:layout_weight="1"
                      android:gravity="center">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:background="@drawable/background_shape_corner"
                      android:gravity="center"
                      android:maxLength="5"
                      android:text="04:40"
                      android:id="@id/item_report_post_time"
                      android:textColor="@color/white"
                      android:textSize="@dimen/text_normal_size"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
        >
            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="#a0a0a0"
            />
            <TextView
                android:id="@id/item_position"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_blue"
                android:gravity="center"
                android:text="01"
                android:textColor="#f5f5f5"
                android:textSize="@dimen/text_normal_size"/>

        </RelativeLayout>
        <RelativeLayout android:id="@id/rl_upload_post"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/padding_bottom"
                        android:layout_marginRight="@dimen/padding_bottom"
                        android:layout_weight="3"
                        android:background="@color/white_light"
                        android:padding="10dp">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@id/el_report_post_one"
            android:visibility="gone">
            <TextView android:id="@id/item_tv_time"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="完成时间"
                      android:textColor="@color/black_light"
                      android:textSize="@dimen/text_normal_size"/>
            <TextView android:id="@id/item_tv_address"
                      android:layout_width="wrap_content"

                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:ellipsize="end"
                      android:lines="1"
                      android:text="位置信息"
                      android:textColor="@color/black_light"
                      android:textSize="@dimen/text_normal_size"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentBottom="true"
                      android:layout_alignParentEnd="true"
                      android:layout_alignParentRight="true"
                      android:text="@string/tv_detail_look"
                      android:textColor="@color/text_blue"
                      android:textSize="@dimen/text_normal_size"/>
            </RelativeLayout>
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentBottom="true"
                       android:layout_alignParentEnd="true"
                       android:layout_alignParentRight="true"
                       android:id="@id/img_photo"
                       android:src="@mipmap/ic_take_photo"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:textColor="@color/black_light"
                      android:textSize="@dimen/text_normal_size"
            android:id="@id/item_overtime_post"/>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
    >
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

        />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
        >
            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="#a0a0a0"
            />
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_blue"
                android:gravity="center"
                android:text="01"
                android:textColor="#f5f5f5"
                android:textSize="@dimen/text_normal_size"
                android:visibility="invisible"/>

        </RelativeLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/padding_bottom"
            android:layout_marginRight="@dimen/padding_bottom"
            android:layout_weight="3"
        />
    </LinearLayout>
</LinearLayout>