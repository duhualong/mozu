<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@id/rl_key_personal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="1dp"
              android:background="@color/white"
              android:orientation="vertical"
>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="48dp"

    >


        <ImageView android:id="@id/img_time"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="@dimen/padding_bottom"
                   android:layout_marginStart="@dimen/padding_bottom"
                   android:src="@mipmap/ic_selcet_time_post"

        />
        <TextView android:id="@id/item_time"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="@dimen/padding_bottom"
                  android:layout_marginStart="@dimen/padding_bottom"
                  android:layout_toEndOf="@id/img_time"
                  android:layout_toRightOf="@id/img_time"
                  android:text="01:20"
                  android:textColor="@color/titleColor"
                  android:textSize="@dimen/text_large_size"/>
        <RelativeLayout android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:id="@id/delete_img"
                        android:visibility="invisible"
                        android:layout_centerVertical="true">

            <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentEnd="true"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:layout_marginEnd="@dimen/padding_bottom"
                       android:layout_marginRight="@dimen/padding_bottom"
                       android:src="@mipmap/ic_delete_time"
                      />


        </RelativeLayout>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/white_light"/>

</LinearLayout>