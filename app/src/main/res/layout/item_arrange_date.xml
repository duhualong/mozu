<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:id="@id/rl_arrange_date"
                android:gravity="center"
               android:padding="@dimen/padding_bottom">
    <TextView android:id="@id/item_date"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:text=""
              android:textSize="@dimen/text_large_size"
              android:textColor="@color/black_light"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_toEndOf="@id/item_date"
              android:layout_toRightOf="@id/item_date"
              android:textColor="@color/titleColor"
              android:id="@id/item_week"
              android:textSize="@dimen/text_normal_size"
              android:layout_marginLeft="@dimen/padding_short"
              android:layout_marginStart="@dimen/padding_short"
              android:layout_marginEnd="@dimen/padding_short"
              android:layout_marginRight="@dimen/padding_short"
              android:text=""/>

</RelativeLayout>