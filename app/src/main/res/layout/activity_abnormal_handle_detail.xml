<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f1f1f1"
              android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="?android:actionBarSize"
                    android:background="@color/colorPrimary">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:text="详情"
                  android:textColor="@color/white"
                  android:textSize="@dimen/text_title_size"/>
        <ImageView android:id="@id/img_back"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_centerVertical="true"
                   android:padding="@dimen/padding_bottom"
                   android:src="@mipmap/ic_back"/>

    </RelativeLayout>

    <TextView android:id="@id/tv_title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:padding="@dimen/padding_bottom"
              android:text="test"
              android:textColor="@color/black_light"
              android:textSize="@dimen/text_large_size"/>
    <TextView android:id="@id/tv_content"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="1dp"
              android:background="@color/white"
              android:padding="@dimen/padding_bottom"
              android:text="test"
              android:textColor="@color/black_light"
              android:textSize="@dimen/text_large_size"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:padding="@dimen/padding_bottom">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:text="发现人"
                  android:textColor="@color/black_light"
                  android:textSize="@dimen/text_large_size"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentEnd="true"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:text="test"
                  android:id="@id/tv_founder"
                  android:textColor="@color/black_light"
                  android:textSize="@dimen/text_large_size"/>
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/padding_longer"
                  android:gravity="center_horizontal"
                  android:orientation="horizontal">
        <ImageView android:id="@id/img_first"
                   android:layout_width="@dimen/img_size"
                   android:layout_height="@dimen/img_size"
                   android:scaleType="centerCrop"
                   android:src="@mipmap/home_banner_default_bg1"/>
        <ImageView android:id="@id/img_second"
                   android:layout_width="@dimen/img_size"
                   android:layout_height="@dimen/img_size"
                   android:layout_marginLeft="@dimen/padding_long"
                   android:layout_marginStart="@dimen/padding_long"
                   android:scaleType="centerCrop"
                   android:visibility="invisible"
                   android:src="@mipmap/home_banner_default_bg1"/>
        <ImageView android:id="@id/img_third"
                   android:layout_width="@dimen/img_size"
                   android:layout_height="@dimen/img_size"
                   android:layout_marginLeft="@dimen/padding_long"
                   android:layout_marginStart="@dimen/padding_long"
                   android:scaleType="centerCrop"
                   android:visibility="invisible"
                   android:src="@mipmap/home_banner_default_bg1"/>
    </LinearLayout>

</LinearLayout>