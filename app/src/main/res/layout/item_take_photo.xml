<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:id="@id/rl_take_photo"
                android:padding="@dimen/padding_bottom">
    <TextView android:id="@id/item_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:text="测试"
              android:textColor="@color/black_light"
              android:textSize="@dimen/text_large_size"/>
    <ImageView android:id="@id/img_right"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentEnd="true"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:src="@mipmap/ic_arrow_right"/>
    <TextView android:id="@id/item_date"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_marginEnd="@dimen/padding_bottom"
              android:layout_marginRight="@dimen/padding_bottom"
              android:layout_toLeftOf="@id/img_right"
              android:layout_toStartOf="@id/img_right"
              android:text="2017-06-11 11:20"
              android:textColor="@color/titleColor"
              android:textSize="@dimen/text_large_size"/>

</RelativeLayout>