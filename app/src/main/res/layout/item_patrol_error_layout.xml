<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/list_touch_bg"
    android:clickable="true"
    android:orientation="vertical"
    android:id="@id/line_detail"
>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_blue"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView
            android:id="@+id/tv_patrol_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/tv_patrol_submit_time"
            android:layout_toStartOf="@+id/tv_patrol_submit_time"
            android:minWidth="80dp"
            android:padding="5dp"
            android:text="报修单号：Eenie"
            android:textColor="#f5f5f5"
            android:textSize="@dimen/text_large_size"
        />

        <TextView
            android:id="@+id/tv_patrol_submit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:minWidth="80dp"
            android:padding="5dp"
            android:text="2016-05-05"
            android:textColor="#f5f5f5"
            android:textSize="@dimen/text_large_size"
        />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                android:padding="5dp"
                android:text="巡检时间"
                android:textColor="@color/black_light"
                android:textSize="@dimen/text_large_size"/>

            <TextView
                android:id="@+id/tv_patrol_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:gravity="center_vertical"
                android:lines="1"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="@color/titleColor"
                android:textSize="@dimen/text_large_size"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                android:padding="5dp"
                android:text="巡检情况"
                android:textColor="@color/black_light"
            />
            <TextView
                android:id="@+id/tv_patrol_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:gravity="center_vertical"
                android:lines="1"
                android:padding="5dp"
                android:textColor="@color/titleColor"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                android:padding="5dp"
                android:text="巡检地点"
                android:textColor="@color/black_light"
            />
            <TextView
                android:id="@+id/tv_patrol_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_14"
                android:gravity="center_vertical"
                android:lines="1"
                android:padding="5dp"
                android:textColor="@color/titleColor"
            />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>