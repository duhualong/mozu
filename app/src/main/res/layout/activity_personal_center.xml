<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@id/root_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f0f0f0"
              android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="?android:actionBarSize"
                    android:background="@color/colorPrimary">
        <ImageView
            android:id="@id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@mipmap/ic_back"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:text="@string/tv_personal_center"
                  android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@id/rl_avatar_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:padding="@dimen/personal_padding"
    >
        <TextView
            android:id="@id/tv_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/personal_padding"
            android:layout_marginStart="@dimen/personal_padding"
            android:text="@string/avatar"
            android:textSize="12sp"
            android:textColor="@color/titleColor"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@id/img_avatar"
            android:layout_width="@dimen/personal_size"
            android:layout_height="@dimen/personal_size"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/ic_default_header"
        />

    </RelativeLayout>
    <RelativeLayout
        android:id="@id/rl_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="@dimen/personal_margin"
    >
        <TextView
            android:id="@id/tv_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/qr_code"
            android:textSize="12sp"
            android:textColor="@color/titleColor"/>
        <ImageView
            android:id="@id/img_scan"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/ic_patrol_item_qrcode"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@id/rl_identity_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="@dimen/personal_margin"
    >
        <TextView
            android:id="@id/tv_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/identity_card"
            android:textSize="12sp"
            android:textColor="@color/titleColor"/>
        <ImageView
            android:id="@id/img_identity_card"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_right"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@id/rl_personal_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="@dimen/personal_margin"
    >
        <TextView
            android:id="@id/tv_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/personal_information"
            android:textSize="12sp"
            android:textColor="@color/titleColor"/>
        <ImageView
            android:id="@id/img_personal_information"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_right"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@id/rl_bank_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="@dimen/personal_margin"
    >
        <TextView
            android:id="@id/tv_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/bank_card"
            android:textSize="12sp"
            android:textColor="@color/titleColor"/>
        <ImageView
            android:id="@id/img_bank_card"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_right"/>
        <TextView
            android:id="@id/bank_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_bank_card"
            android:layout_toStartOf="@id/img_bank_card"
            android:text="未填写"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@id/rl_security_certificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="@dimen/personal_margin"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/security_certificate"
            android:textSize="12sp"
            android:textColor="@color/titleColor"/>
        <ImageView
            android:id="@id/img_security_certificate"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_right"/>
        <TextView
            android:id="@id/security_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_security_certificate"
            android:layout_toStartOf="@id/img_security_certificate"
            android:text="未填写"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"/>
    </RelativeLayout>
    <Button android:id="@id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_height_larger_distance"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:textSize="12sp"
            android:background="@mipmap/bg_submit_button"
            android:text="@string/btn_exit_account"/>
</LinearLayout>