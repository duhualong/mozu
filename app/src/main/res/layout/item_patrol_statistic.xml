<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/white_light"
    android:id="@id/line_routing_record"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_report_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:padding="@dimen/dp_10"
            android:text="Test"
            android:textColor="@color/black_light"
        />
        <TextView
            android:id="@+id/tv_report_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:padding="@dimen/dp_10"
            android:text="2017-07-20"
            android:textColor="@color/black_light"
        />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:clipChildren="false"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_turn_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:text="完成率"
                android:textColor="@color/black_light"/>
            <org.eenie.wgj.ui.routinginspection.base.HintProgressBar
                android:id="@+id/turn_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:clipChildren="false"
                app:hint_progressbar_progress_style="@drawable/hint_progress_indeterminate_drawable_red"
                app:hint_view_background="@drawable/hint_progress_bg_red"
                app:hint_view_prefixion_text="完成率：">
            </org.eenie.wgj.ui.routinginspection.base.HintProgressBar>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_turn_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="圈数：0/0"
            android:textColor="@color/titleColor"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:clipChildren="false"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_point_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:text="准点率"
                android:textColor="@color/black_light"/>
            <org.eenie.wgj.ui.routinginspection.base.HintProgressBar
                android:id="@+id/point_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:hint_view_prefixion_text="准点率：">
            </org.eenie.wgj.ui.routinginspection.base.HintProgressBar>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_point_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|end"
            android:text="点数：0/0"
            android:textColor="@color/titleColor"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_check_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:padding="@dimen/dp_10"
            android:text="@string/tv_detail_look"
            android:textColor="@color/text_blue"

        />
    </RelativeLayout>
</LinearLayout>

