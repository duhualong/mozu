<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="72dp"
             android:layout_alignParentBottom="true"
             android:background="@android:color/transparent"
>

    <LinearLayout
        android:id="@id/ll_home_pager"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="horizontal"
    >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
        >

            <TextView
                android:id="@id/tv_home_pager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableTop="@mipmap/ic_home_bottom_tab_main"
                android:text="@string/tv_home"
                android:textSize="10sp"
                android:textColor="@color/titleColor"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@id/ll_contact_pager"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
        >

            <TextView
                android:id="@id/tv_contact_pager"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:drawablePadding="3dp"
                android:drawableTop="@mipmap/ic_home_bottom_tab_contact"
                android:gravity="center"
                android:text="@string/tv_contact"
                android:textSize="10sp"
                android:textColor="@color/titleColor"
            />
            <View android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@id/ll_apply_pager"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
        >
            <View android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"/>
            <TextView
                android:id="@id/tv_apply_pager"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:drawablePadding="3dp"
                android:drawableTop="@mipmap/ic_home_bottom_tab_app"
                android:gravity="center"
                android:text="@string/tv_apply"
                android:textSize="10sp"
                android:textColor="@color/titleColor"
            />

        </LinearLayout>
        <LinearLayout
            android:id="@id/ll_mine_pager"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
        >
            <TextView
                android:id="@id/tv_mine_pager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableTop="@mipmap/ic_home_bottom_tab_me"
                android:gravity="center"
                android:text="@string/tv_my"
                android:textSize="10sp"
                android:textColor="@color/titleColor"

            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@id/ll_message_pager"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:id="@id/img_message"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/ic_home_bottom_tab_msg"/>
        <TextView
            android:id="@id/tv_message_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/tv_message"
            android:textSize="10sp"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/titleColor"
        />
    </LinearLayout>
</FrameLayout>