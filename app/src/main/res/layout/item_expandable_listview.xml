<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="@dimen/padding_bottom"
>
    <TextView android:layout_width="30dp"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:text="1"
              android:layout_marginEnd="4dp"
              android:layout_marginRight="4dp"
              android:visibility="gone"
              android:gravity="center"
              android:id="@id/tv_position"
              android:textColor="@color/text_blue"
              android:textSize="@dimen/text_large_size"/>

    <TextView android:id="@id/item_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:text="测试"
              android:layout_toEndOf="@id/tv_position"
              android:layout_toRightOf="@id/tv_position"
              android:textColor="@color/black_light"
              android:textSize="@dimen/text_large_size"/>
    <ImageView android:id="@id/img_expend"
               android:layout_width="48dp"
               android:layout_height="wrap_content"
               android:layout_alignParentEnd="true"
               android:layout_alignParentRight="true"
               android:src="@mipmap/ic_collapse"/>
</RelativeLayout>
