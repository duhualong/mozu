<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:padding="@dimen/padding_bottom">
    <TextView android:id="@id/tv_sort_number"
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:layout_centerVertical="true"
              android:gravity="center"
              android:text="1"

              android:textColor="@color/text_blue"
              android:textSize="@dimen/text_large_size"/>
    <ImageView android:id="@id/img_sort"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:layout_centerVertical="true"
               android:visibility="gone"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@id/img_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding_bottom"
        android:layout_marginStart="@dimen/padding_bottom"
        android:layout_toEndOf="@id/tv_sort_number"
        android:layout_toRightOf="@id/tv_sort_number"
        android:src="@mipmap/ic_default_header"/>
    <TextView android:id="@id/item_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/padding_bottom"
              android:layout_marginStart="@dimen/padding_bottom"
              android:layout_marginTop="@dimen/padding_short"
              android:layout_toEndOf="@id/img_avatar"
              android:layout_toRightOf="@id/img_avatar"
              android:text="韩红"
              android:textColor="@color/black_light"
              android:textSize="@dimen/text_normal_size"/>

    <TextView android:id="@id/item_post"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/item_name"
              android:layout_marginLeft="@dimen/padding_bottom"
              android:layout_marginStart="@dimen/padding_bottom"
              android:layout_toEndOf="@id/img_avatar"
              android:layout_toRightOf="@id/img_avatar"
              android:text="项目主管"
              android:textColor="@color/titleColor"
              android:textSize="@dimen/text_normal_size"/>

</RelativeLayout>