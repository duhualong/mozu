<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@id/rl_key_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:padding="@dimen/padding_bottom"
>
    <TextView android:id="@id/item_contacts_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:text="张三"
              android:textColor="@color/black_light"
              android:textSize="@dimen/text_large_size"/>
    <TextView android:id="@id/item_time"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_marginLeft="@dimen/padding_bottom"
              android:layout_marginStart="@dimen/padding_bottom"
              android:layout_toEndOf="@id/item_contacts_name"
              android:layout_toRightOf="@id/item_contacts_name"
              android:text="08:20-12:20"
              android:textColor="@color/titleColor"
              android:textSize="@dimen/text_large_size"/>

    <ImageView android:id="@id/img_edit_classwide"
               android:layout_width="24dp"
               android:layout_height="24dp"
               android:layout_alignParentEnd="true"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:src="@mipmap/ic_project_edit"/>


</RelativeLayout>