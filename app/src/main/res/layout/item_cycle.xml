<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@id/rl_key_personal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"

>
    <TextView android:id="@id/item_post"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_marginLeft="@dimen/padding_bottom"
              android:layout_marginStart="@dimen/padding_bottom"
              android:background="@drawable/background_shape_corner"
              android:gravity="center"
              android:text="01"
              android:textColor="@color/white"
              android:textSize="@dimen/text_normal_size"/>
    <ImageView
        android:id="@id/img_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/padding_bottom"
        android:layout_marginRight="@dimen/padding_bottom"
        android:padding="10dp"
        android:src="@mipmap/ic_arrow_right"/>
    <TextView android:layout_width="wrap_content"
              android:id="@id/tv_round_point"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_toLeftOf="@id/img_right"
              android:layout_toStartOf="@id/img_right"
              android:textColor="@color/titleColor"
              android:text="共3个巡检点"/>


</RelativeLayout>