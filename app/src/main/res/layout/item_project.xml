<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@id/rl_item_project"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="@dimen/padding_nor"
                android:layout_marginEnd="@dimen/padding_normal"
                android:layout_marginLeft="@dimen/padding_normal"
                android:layout_marginRight="@dimen/padding_normal"
                android:layout_marginStart="@dimen/padding_normal"
                android:layout_marginTop="@dimen/padding_nor"
                android:background="@color/white"
                android:orientation="vertical">
    <ImageView android:id="@id/item_project_img"
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_centerVertical="true"
               android:layout_marginLeft="@dimen/padding_bottom"
               android:layout_marginStart="@dimen/padding_bottom"
               android:scaleType="fitXY"
               android:src="@mipmap/home_banner_default_bg1"/>
    <TextView android:id="@id/item_project_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_marginLeft="@dimen/margin_height_normal_distance"
              android:layout_marginStart="@dimen/margin_height_normal_distance"
              android:layout_toEndOf="@id/item_project_img"
              android:layout_toRightOf="@id/item_project_img"
              android:text="会德丰国际广场"
              android:textColor="@color/text_blue"
              android:textSize="@dimen/text_title_size"/>
    <ImageView android:id="@id/item_project_edit"
               android:layout_width="48dp"
               android:layout_height="48dp"
               android:layout_alignParentEnd="true"
               android:layout_alignParentRight="true"
               android:padding="@dimen/padding_bottom"
               android:src="@mipmap/ic_project_edit"
    />


</RelativeLayout>