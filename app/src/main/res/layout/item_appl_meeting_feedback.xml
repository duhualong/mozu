<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@id/rl_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:padding="@dimen/padding_bottom">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@id/img_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_default_header"/>
    <TextView android:id="@id/item_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/padding_bottom"
              android:layout_marginStart="@dimen/padding_bottom"
              android:layout_marginTop="@dimen/padding_short"
              android:layout_toEndOf="@id/img_avatar"
              android:layout_toRightOf="@id/img_avatar"
              android:text="测试"
              android:textColor="@color/gray"
              android:textSize="@dimen/text_normal_size"/>
    <TextView android:id="@id/item_content"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/item_name"
              android:layout_marginLeft="@dimen/padding_bottom"
              android:layout_marginStart="@dimen/padding_bottom"
              android:layout_marginTop="2dp"
              android:layout_toEndOf="@id/img_avatar"
              android:layout_toRightOf="@id/img_avatar"
              android:text="测试"
              android:textColor="@color/black_light"
              android:textSize="@dimen/text_large_size"/>
    <TextView android:id="@id/item_feedback_result"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_alignParentRight="true"
              android:layout_below="@id/item_date"
              android:layout_marginTop="2dp"
              android:text="测试"

              android:textColor="@color/black_light"/>
    <TextView android:id="@id/item_date"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_alignParentRight="true"
              android:layout_marginTop="@dimen/padding_short"
              android:text="2017年07月02日"
              android:textColor="@color/gray"
              android:textSize="@dimen/text_normal_size"
    />


</RelativeLayout>