<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/bg_train_backboard"
        android:padding="@dimen/dp_10"
    >

        <TextView
            android:id="@+id/tv_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="关键人物"
            android:textColor="@color/white"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
            >

                <org.eenie.wgj.ui.reportpoststatistics.CircularProgressBar
                    android:id="@+id/pro_master_rate"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_master_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25.66%"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关键人物\n学习进度"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_normal_size"/>
                </LinearLayout>
            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:gravity="center"
            >

                <org.eenie.wgj.ui.reportpoststatistics.CircularProgressBar
                    android:id="@+id/pro_post_rate"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_post_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25.66%"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="岗位培训\n学习进度"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_normal_size"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
