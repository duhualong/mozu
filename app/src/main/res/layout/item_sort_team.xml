<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:padding="@dimen/padding_bottom"
                android:id="@id/rl_sort_team"
>
    <ImageView android:id="@id/img_gold_number"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/padding_short"
               android:src="@mipmap/ic_gold"
               android:visibility="invisible"
    />
    <TextView android:id="@id/tv_gold_number"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="4dp"
              android:layout_marginStart="4dp"
              android:layout_marginTop="@dimen/padding_short"
              android:text="1"
              android:textColor="@color/text_blue"
              android:textSize="@dimen/text_large_size"
    />
    <TextView android:id="@id/item_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/padding_bottom"
              android:layout_marginStart="@dimen/padding_bottom"
              android:layout_toEndOf="@id/attendance_first"
              android:layout_toRightOf="@id/attendance_first"
              android:text="测试"
              android:textColor="@color/black_light"
              android:textSize="@dimen/text_large_size"
    />

    <TextView android:id="@id/item_post"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/padding_bottom"
              android:layout_marginStart="@dimen/padding_bottom"
              android:layout_toEndOf="@id/item_name"
              android:layout_toRightOf="@id/item_name"
              android:text="测试"
              android:textColor="@color/titleColor"
              android:textSize="@dimen/text_normal_size"
    />
    <TextView android:id="@id/attendance_day"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/padding_bottom"
              android:layout_marginStart="@dimen/padding_bottom"
              android:layout_toEndOf="@id/item_post"
              android:layout_toRightOf="@id/item_post"
              android:text="出勤：0天"
              android:textColor="@color/text_blue"
              android:textSize="@dimen/text_normal_size"
    />
    <TextView android:id="@id/item_date"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_alignParentRight="true"
              android:text="2017-06"
              android:textColor="@color/titleColor"
              android:textSize="@dimen/text_normal_size"/>
    <TextView android:id="@id/attendance_first"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/img_gold_number"
              android:gravity="center"
              android:text="第一名\n共0次"
              android:textColor="@color/titleColor"
              android:textSize="@dimen/text_normal_size"/>

    <TextView android:id="@id/rest_day"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/tv_gold_number"
              android:layout_marginLeft="@dimen/padding_bottom"
              android:layout_marginStart="@dimen/padding_bottom"
              android:layout_toEndOf="@id/attendance_first"
              android:layout_toRightOf="@id/attendance_first"
              android:background="@color/background_rest"
              android:gravity="center"
              android:padding="@dimen/padding_short"
              android:text="休息日\n31"
              android:textColor="@color/titleColor"
              android:textSize="@dimen/text_normal_size"/>
    <TextView android:id="@id/rest_day_two"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/tv_gold_number"
              android:layout_marginLeft="@dimen/padding_short"
              android:layout_marginStart="@dimen/padding_short"
              android:layout_toEndOf="@id/rest_day"
              android:layout_toRightOf="@id/rest_day"
              android:background="@color/calendar_highlighted_day_bg"
              android:gravity="center"
              android:padding="@dimen/padding_short"
              android:text="休息日\n31"
              android:visibility="gone"
              android:textColor="@color/titleColor"
              android:textSize="@dimen/text_normal_size"/>
    <TextView android:id="@id/rest_day_three"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/tv_gold_number"
              android:layout_marginLeft="@dimen/padding_short"
              android:layout_marginStart="@dimen/padding_short"
              android:layout_toEndOf="@id/rest_day_two"
              android:layout_toRightOf="@id/rest_day_two"
              android:background="@color/calendar_selected_range_bg"
              android:gravity="center"
              android:padding="@dimen/padding_short"
              android:text="休息日\n31"
              android:textColor="@color/titleColor"
              android:visibility="gone"
              android:textSize="@dimen/text_normal_size"/>
    <TextView android:id="@id/rest_day_four"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/tv_gold_number"
              android:layout_marginLeft="@dimen/padding_short"
              android:layout_marginStart="@dimen/padding_short"
              android:layout_toEndOf="@id/rest_day_three"
              android:layout_toRightOf="@id/rest_day_three"
              android:background="@color/calendar_text_active"
              android:gravity="center"
              android:padding="@dimen/padding_short"
              android:text="休息日\n31"
              android:visibility="gone"
              android:textColor="@color/titleColor"
              android:textSize="@dimen/text_normal_size"/>
</RelativeLayout>