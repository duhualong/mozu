<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@id/root_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f0f0f0"
              android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="?android:actionBarSize"
                    android:background="@color/colorPrimary">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:text="@string/security_certificate"
                  android:textAppearance="@style/TextAppearance.AppCompat.Title"
                  android:textColor="@color/white"/>
        <ImageView android:id="@id/img_back"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:padding="@dimen/personal_padding"
                   android:src="@mipmap/ic_back"/>
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/white"

                  android:orientation="vertical">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/titleColor"
                  android:layout_marginTop="20dp"
                  android:layout_marginLeft="@dimen/personal_padding"
                  android:layout_marginStart="@dimen/personal_padding"
        android:text="@string/security_certificate"/>
        <EditText
            android:id="@id/et_bank_card"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/personal_margin"
            android:layout_marginEnd="@dimen/font_size_18sp"
            android:layout_marginLeft="@dimen/font_size_18sp"
            android:layout_marginRight="@dimen/font_size_18sp"
            android:layout_marginStart="@dimen/font_size_18sp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/bg_edit_text_light"
            android:hint="@string/input_security_hint"
            android:inputType="number"
            android:maxLength="25"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/titleColor"
            android:textColorHint="@color/textHintColor"/>
    </LinearLayout>
    <Button
        android:id="@id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_height_larger_distance"
        android:layout_marginBottom="@dimen/font_size_18sp"
        android:layout_marginEnd="@dimen/font_size_18sp"
        android:layout_marginLeft="@dimen/font_size_18sp"
        android:layout_marginRight="@dimen/font_size_18sp"
        android:layout_marginStart="@dimen/font_size_18sp"
        android:layout_marginTop="24dp"
        android:background="@mipmap/bg_submit_button"
        android:text="@string/tv_save"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
    />

</LinearLayout>