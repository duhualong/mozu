<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.eenie.wgj">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.FLASHLIGHT"/>


    <uses-permission android:name="android.permission.CALL_PHONE"/>
    //地图包、搜索包需要的基础权限
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>


    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.SplashActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize"
        />
        <activity android:name=".ui.login.LoginActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize"
        />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"/>
        <!--个人中心基本信息-->
        <activity android:name=".ui.personal.information.PersonalBaseInfoActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize"/>

        <!--个人信息的二维码-->
        <activity android:name=".ui.personal.information.PersonalBarcodeActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize"/>
        <!--绑定银行卡-->
        <activity android:name=".ui.personal.information.PersonalBindBankActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize"/>
        <!--绑定保安证号-->
        <activity android:name=".ui.personal.information.PersonalSecurityActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize"/>

        <!--个人信息-->
        <activity android:name=".ui.personal.information.PersonalInformationActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize"/>
        <!--提醒设置-->
        <activity android:name=".ui.personal.alert.PersonalMessageAlertActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize"/>
        <!--考勤设置-->
        <activity android:name=".ui.personal.alert.AttendanceWorkActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize"/>
        <!--报岗设置-->
        <activity android:name=".ui.personal.alert.ReportWorkActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize"/>
        <!--巡检提醒-->
        <activity android:name=".ui.personal.alert.RountingWorkActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize"/>
        <!--版本检查更新-->
        <activity android:name=".ui.personal.alert.CheckoutVersionActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize"/>


        <!--消息-->

        <!--待办事项-->
        <activity android:name=".ui.message.ToDoNoticeActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize"/>
        <!--待办事项详情-->
        <activity android:name=".ui.message.ApplyFeedBackActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize|adjustPan"/>
        <!--通知-->
        <activity android:name=".ui.message.NoticeMessageActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize"/>

        <!--生日提醒-->
        <activity android:name=".ui.message.BirthdayAlertActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".ui.message.BirthdayDetailPersonalActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".ui.message.BirthdayGiftActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustPan"/>
        <!--异常提醒-->
        <activity android:name=".ui.message.AbnormalHandleNotifyActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".ui.message.AbnormalDetailActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".ui.message.GalleryActivity"
            android:screenOrientation="portrait"
        />

